<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Shop.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_main" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/Theme.Shop.PopupOverlay" />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal"
        android:visibility="invisible">


        <Button
            android:id="@+id/homeBtn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            app:backgroundTint="@color/white"
            app:icon="@drawable/home"
            app:iconGravity="textEnd"

            app:iconTint="@color/gray_400" />

        <Button
            android:id="@+id/chatBtn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            app:backgroundTint="@color/white"
            app:icon="@drawable/chat"
            app:iconGravity="textEnd"
            app:iconTint="@color/gray_400" />

        <Button
            android:id="@+id/camBtn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:background="?android:attr/selectableItemBackground"
            app:backgroundTint="@color/white"
            app:icon="@drawable/camera"
            app:iconGravity="textEnd"
            app:iconTint="@color/gray_400" />

        <Button
            android:id="@+id/notfBtn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            app:backgroundTint="@color/white"
            app:icon="@drawable/notification"
            app:iconGravity="textEnd"

            app:iconTint="@color/gray_400" />

        <Button
            android:id="@+id/profBtn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            app:backgroundTint="@color/white"
            app:icon="@drawable/profile"
            app:iconGravity="textEnd"
            app:iconTint="@color/gray_400" />

    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>